<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Forms.AbsolutePage1">
        <AbsoluteLayout>
            <BoxView BackgroundColor="#f7f7f7"
                     AbsoluteLayout.LayoutBounds="0, 0, 1, 0.3333333" AbsoluteLayout.LayoutFlags="All"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center"
                         AbsoluteLayout.LayoutBounds="0, 0, 1, 0.333333" AbsoluteLayout.LayoutFlags="All">
                <Label Text="$11.95" TextColor="#33353a" FontSize="60" FontAttributes="Bold"/>
                <Button BackgroundColor="#1695A3" BorderRadius="15" HeightRequest="30" FontSize="15" FontAttributes="bold" Text="Add $7.99 Credit" TextColor="White"/>
            </StackLayout>  
            <StackLayout Padding="40" Spacing="20"
                         AbsoluteLayout.LayoutBounds="0, 0.5, 1, 0.33333"
                         AbsoluteLayout.LayoutFlags="All">
                <Label Text="Why pay for credit?" FontSize="15" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                <Label FontSize="13" HorizontalTextAlignment="Center">
                    Because you can reach people who aren’t on SkyApp by calling mobile and landline numbers, or spending SMS, at low-cost rates.
                </Label>
            </StackLayout>
        </AbsoluteLayout>
</ContentPage>
