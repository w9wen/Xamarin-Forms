<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forms.Images.ImagePage1"
             BackgroundColor="Black">
    <AbsoluteLayout>
        
        <Image x:Name="Image_Gallery"
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All"/>
        <ActivityIndicator Color="White" IsRunning="{Binding Source={x:Reference Image_Gallery}, Path=IsLoading}"
                           AbsoluteLayout.LayoutBounds="0.5,0.05,80,80"
                           AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button Image="left.png" Text="Previous" Clicked="Handle_Clicked"
                AbsoluteLayout.LayoutBounds="0.05, 0.05, 150, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button Image="right.png" Text="Next" Clicked="Handle_Clicked"
                AbsoluteLayout.LayoutBounds="0.95,0.05,150,100"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>
</ContentPage>