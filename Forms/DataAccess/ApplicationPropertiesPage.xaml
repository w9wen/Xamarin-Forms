<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forms.DataAccess.ApplicationPropertiesPage">
    <TableView>
        <TableRoot>
            <TableSection Title="Application">
                <EntryCell x:Name="EntryCell_Description" Text="{Binding Description}" Placeholder="Some tip here." Completed="InputOnChanged"/>
                <SwitchCell x:Name="SwitchCell_Notification" Text="Notification" On="{Binding Notification}" OnChanged="InputOnChanged"/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>